<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.BoardActivity">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/board_activity_content_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    <Button
            android:id="@+id/board_activity_add_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/board_activity_add_board_content"
            android:layout_alignParentEnd="true"/>

    <TextView
            android:id="@+id/board_activity_empty_boards"
            android:hint="@string/board_activity_emptyBoardHint"
            android:textSize="@android:dimen/app_icon_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
</RelativeLayout>